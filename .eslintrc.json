{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true,
    "jest": true,
    "webextensions": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["warn", { "args": "none", "varsIgnorePattern": "^_" }],
    "no-console": "off",
    "no-undef": "off",
    "no-empty": ["warn", { "allowEmptyCatch": true }],
    "semi": ["warn", "always"],
    "quotes": ["warn", "single"]
  }
}
