{
  "manifest_version": 3,
  "name": "OpenWhen",
  "version": "1.0.0",
  "description": "OpenWhen: open URLs on a schedule and show a short reminder banner",
  "homepage_url": "https://github.com/dennymarcels/OpenWhen",
  "permissions": [
    "storage",
    "alarms",
    "tabs",
    "windows",
    "scripting",
    "notifications",
    "contextMenus"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    },
    "default_title": "OpenWhen",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "side_panel": {
    "default_path": "sidebar.html"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "styles.css",
        "icons/icon16.png",
        "icons/icon32.png",
        "icons/icon48.png",
        "icons/icon128.png",
        "sidebar.html",
        "icons/icon.png"
      ],
      "matches": ["http://*/*","https://*/*"]
    }
  ]
}
