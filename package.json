{
  "name": "openwhen",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "test": "jest --colors",
    "lint": "eslint . --ext .js",
    "prepare": "husky install",
    "build:zip": "node ./scripts/build-zip.js"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "roots": [
      "<rootDir>/tests"
    ]
  },
  "devDependencies": {
    "@testing-library/dom": "^8.20.1",
    "eslint": "^8.48.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.0.3",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^30.1.2",
    "archiver": "^5.3.1"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix --ext .js",
      "npx jest --bail --findRelatedTests --passWithNoTests"
    ]
  }
}